---
const { pageNumber, frontImg, backImg } = Astro.props;
---

<div id=`page${pageNumber}` class="page">
    <div class="front">
        <div id=`front${pageNumber}` class="front-content">
            <!-- <h1> Front {pageNumber} </h1> -->
             <img src=`${frontImg}` width="100%" height="100%">
        </div>
        <div class="right-arrow"> &rarr; </div>
    </div>
    <div class="back">
        <div id=`back${pageNumber}` class="back-content">
            <!-- <h1> Back {pageNumber} </h1> -->
             <img src=`${backImg}` width="100%" height="100%">
        </div>
        <div class="right-arrow"> &rarr; </div>
    </div>
</div>