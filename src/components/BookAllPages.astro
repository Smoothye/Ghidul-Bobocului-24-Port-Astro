---
import BookPage from "./BookPage.astro";
const { numberOfPages } = Astro.props;
---

{Array.from({length: numberOfPages}).map(

    (val, index) => <BookPage
                        pageNumber={index + 1}
                        frontImg=`media/pagini/web-${2 * (index + 1) - 1}.svg`
                        backImg=`media/pagini/web-${2 * (index + 1)}.svg`
                    />
)}
