---
import BookPage from "./BookPage.astro";
const { numberOfPages } = Astro.props;
---

{Array.from({length: numberOfPages}).map(

    (val, index) => {
        
        return (2 * (index + 1) === 6) ?
        <BookPage   pageNumber={index + 1}
                    frontImg=`media/pagini/ghid-${2 * (index + 1) - 1}.webp`
                    backImg=`media/pagini/ghid-${2 * (index + 1)}.webp`
                    paginaCuprins="true"
        /> :
        <BookPage   pageNumber={index + 1}
                    frontImg=`media/pagini/ghid-${2 * (index + 1) - 1}.webp`
                    backImg=`media/pagini/ghid-${2 * (index + 1)}.webp`
        />
    }
)}
