---
import BaseLayout from "../layouts/BaseLayout.astro";
import BookPage from "../components/BookPage.astro";
import BookPageNarrow from "../components/BookPageNarrow.astro";
---

<script src="/src/scripts/bookAnimation.js" defer></script>
<BaseLayout>
    <div id="book-wrapper">
        
        <button id="prev" onclick="animatie(-1)"></button>
        <button id="next" onclick="animatie(1)"></button>
        <button id="buton-cuprins" onclick="goToPage(3)"> CUPRINS </button>

        <div id="book">
            <BookPage pageNumber="1" />
            <BookPage pageNumber="2" />
            <BookPage pageNumber="3" />
            <BookPage pageNumber="4" />
            <BookPage pageNumber="5" />
        </div> <!-- end of book -->
    </div> <!-- end of book wrapper -->
    
    <div id="book-wrapper-narrow">
        
        <button id="prev-narrow" onclick="animatieNarrow(-1)"></button>
        <button id="next-narrow" onclick="animatieNarrow(1)"></button>
        <button id="buton-cuprins-narrow" onclick="goToPageNarrow(6)"> CUPRINS </button>
        
        <div id="book-narrow">
            <BookPageNarrow pageNumber="1" />
            <BookPageNarrow pageNumber="2" />
            <BookPageNarrow pageNumber="3" />
            <BookPageNarrow pageNumber="4" />
            <BookPageNarrow pageNumber="5" />
            <BookPageNarrow pageNumber="6" />
            <BookPageNarrow pageNumber="7" />
            <BookPageNarrow pageNumber="8" />
            <BookPageNarrow pageNumber="9" />
            <BookPageNarrow pageNumber="10" />
        </div> <!-- end of book -->
    </div> <!-- end of book wrapper -->

</BaseLayout>
