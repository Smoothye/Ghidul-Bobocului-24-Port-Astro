---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout showFooter={false}>

	<a href="/homePage" id="goHomePage" style="display: none;"></a>
	<div id="welcome"> Bună, bobocule, și bine ai venit pe tărâmul facultății! </div>

	<script is:inline>

		addEventListener("load", () => {

			setTimeout(
				() => { document.getElementById("goHomePage").click(); },
				2000
			);
		});

	</script>
</BaseLayout>